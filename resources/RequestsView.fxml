<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.RequestsController" prefWidth="600" prefHeight="400" style="-fx-background-color: #f3e5f5;">
    <VBox spacing="10" alignment="CENTER" layoutX="20.0" layoutY="20.0">
        <Label text="Friend Requests" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6a1b9a;" />

        <HBox spacing="10">
            <Label text="First Name:" style="-fx-text-fill: #6a1b9a;" />
            <TextField fx:id="fisrt_name" promptText="Enter first name" />
        </HBox>

        <HBox spacing="10">
            <Label text="Last Name:" style="-fx-text-fill: #6a1b9a;" />
            <TextField fx:id="last_name" promptText="Enter last name" />
        </HBox>

        <Button text="Send Request" onAction="#SendRequest" style="-fx-background-color: #ab47bc; -fx-text-fill: white;" />

        <Label text="Friendship Requests List:" style="-fx-font-size: 18px; -fx-text-fill: #8e24aa;" />
        <ListView fx:id="requestsList" prefHeight="200" prefWidth="400" />

        <HBox spacing="10">
            <Button text="Accept" onAction="#AcceptButton" style="-fx-background-color: #7e57c2; -fx-text-fill: white;" />
            <Button text="Reject" onAction="#RejectButton" style="-fx-background-color: #ef5350; -fx-text-fill: white;" />
        </HBox>

        <Button text="Back" onAction="#onButtonBackClicked" style="-fx-background-color: #9575cd; -fx-text-fill: white;" />

        <Label fx:id="messageLabel" style="-fx-text-fill: #6a1b9a;" />
    </VBox>
</AnchorPane>
