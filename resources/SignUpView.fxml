<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.SignUpController">
    <!-- Titlu -->
    <Text text="Sign Up" style="-fx-font-size: 40px; -fx-font-weight: bold;" layoutX="150" layoutY="50"/>

    <!-- Câmp pentru first name -->
    <TextField fx:id="firstNameField" promptText="First Name" layoutX="100" layoutY="150" prefWidth="300"/>

    <!-- Câmp pentru last name -->
    <TextField fx:id="lastNameField" promptText="Last Name" layoutX="100" layoutY="200" prefWidth="300"/>

    <!-- Câmp pentru email -->
    <TextField fx:id="emailField" promptText="Email" layoutX="100" layoutY="250" prefWidth="300"/>

    <!-- Câmp pentru parolă -->
    <PasswordField fx:id="passwordField" promptText="Password" layoutX="100" layoutY="300" prefWidth="300"/>

    <!-- Buton Sign Up -->
    <Button text="Sign Up" layoutX="100" layoutY="350" prefWidth="300" onAction="#handleSignUp"/>
</AnchorPane>
